                <WelcomeText client:load />
            </div>
            <div class="absolute top-0 right-0 m-4">
                <button
                    type="button"
                    class="text-gray-900 hover:text-white border border-gray-800 hover:bg-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:over:border-gray-600 dark:hover:text-gray-400 dark:text-white dark:bg-gray-600 dark:focus:ring-gray-800"
                    onclick="window.location.href = '/Scheduler'"
