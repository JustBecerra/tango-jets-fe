---
import { RouteGuard } from "../components/routeguard"
import { WelcomeText } from "../components/text/WelcomeText"
import Layout from "../layouts/Layout.astro"
import { Datitos } from "../components/cargadorDeTablas/Datitos"
---

<Layout title="Tango Jets.">
    <RouteGuard client:load="react">
        <div class="flex flex-col items-center justify-start relative w-full min-h-screen p-2 md:p-4 lg:p-6">
            <div class="w-full flex flex-col items-center min-h-[50px] min-w-[200px] p-1">
                <WelcomeText client:load />
            </div>
            <div class="w-full flex justify-end mt-2">
                <button class="flex items-center justify-center gap-1 px-2 py-1 md:px-3 md:py-1 lg:px-4 lg:py-2 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-100 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200"
                onclick="window.location.href = '/Scheduler'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                    </svg>
                    <span class="text-xs md:text-sm font-medium text-gray-800">New Trip</span>
                </button>
            </div>
            <div class="w-full mt-2">
                <Datitos client:load />
            </div>
        </div>
    </RouteGuard>
</Layout>