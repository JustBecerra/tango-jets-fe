---
import Sidebar from "../components/sidebar/Sidebar.astro"

interface Props {
    title: string
}

const { title } = Astro.props
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="flex flex-col md:flex-row h-screen m-0 font-sans bg-gray-50 text-gray-800">
    <!-- Sidebar -->
    <Sidebar class="w-full md:w-64 bg-white shadow-lg p-5 rounded-lg" />

    <!-- Main Content -->
    <div class="flex-1 flex flex-col justify-center items-center p-8 bg-gradient-to-b from-[#BFE4FC] to-[#FFFFFF] text-gray-800 rounded-lg shadow-lg">
        <!-- bg-gradient-to-b from-[#BFE4FC] to-[#FFFFFF] -->
        <!-- <div class="bg-gradient-to-br from-blue-500 via-green-300 to-yellow-100 h-64 w-full"></div> -->        
        <slot />
    </div>
  

    <!-- Flowbite -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>
</html>
